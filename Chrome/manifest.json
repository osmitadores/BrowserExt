{
  "manifest_version": 2,

  "name": "Mitatizador",
  "description": "Mitifique a web!",
  "version": "0.4",
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.plug.dj/*"],
      "js": ["mythPlug.js"],
      "css":["plug.css"]
    },
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["mythFB.js"],
      "css":["fb.css"]
    }
  ]
}
